HSM_REFLECT_BLUR_MIN = "0.300000"
HSM_REFLECT_BLUR_MAX = "0.600000"
HSM_REFLECT_NOISE_AMOUNT = "1.000000"
HSM_REFLECT_NOISE_SAMPLES = "4.000000"
HSM_REFLECT_NOISE_SAMPLE_DISTANCE = "0.150000"
HSM_REFLECT_NOISE_SAMPLE_DISTANCE = "0.150000"
HSM_REFLECT_IS_LAST_PASS = "1.000000"
HSM_BG_BRIGHTNESS = "0.000000"
HSM_REFLECT_VIGNETTE_AMOUNT = "55.000000"
HSM_TOP_OPACITY = "0.500000"
HSM_TOP_BLEND_MODE = "1.000000"
HSM_TOP_MASK_MODE = "2.000000"

// Define textures to be used by the different passes
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;ColoredGelImage;TubeStaticReflectionImage;ReflectOnlyLayerImage;"

