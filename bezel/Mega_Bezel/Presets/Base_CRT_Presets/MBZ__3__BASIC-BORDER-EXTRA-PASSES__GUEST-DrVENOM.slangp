// Add Mega Bezel parameters at the beginning of the list for easy access
// A very small pass at 1/8th scale to cache values which are consistent across the frame
// Read back these values later for better performance
shader0 = ../../shaders/HyperspaceMadness/hsm-prep-info-cache-basic-border.slang
float_framebuffer0 = true
scale_type0 = source
scale_y0 = 0.25
alias0  = "InfoCachePass"

// Add Intro Animation
shader1 = ../../shaders/HyperspaceMadness/hsm-prep-intro-basic-border.slang
float_framebuffer1 = true
scale_type1 = source
scale_y1 = 4
alias1 = "IntroPass"

// Color Correction with Dogway's awesome Grade shader
shader2 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang
alias2 = "PreDeDitheringPass"

// De-Dithering - Mdapt
shader3 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass0.slang
shader4 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass1.slang
shader5 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass2.slang
shader6 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass3.slang
shader7 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass4.slang

// SGENDPT - Hyllian's great de-dither shader
shader8 = ../../shaders/HyperspaceMadness/hsm-sgenpt-mix/hsm-sgenpt-mix.slang

shader9 = ../../shaders/HyperspaceMadness/hsm-ps1dither/hsm-PS1-Undither-BoxBlur.slang
alias9 = refpass

shader10 = ../../shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass0.slang
filter_linear10 = false
scale_type10 = source
scale10 = 1.0
float_framebuffer10 = true
alias10 = scalefx_pass0

shader11 = ../../shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass1.slang
filter_linear11 = false
scale_type11 = source
scale11 = 1.0
float_framebuffer11 = true

shader12 = ../../shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass2.slang
filter_linear12 = false
scale_type12 = source
scale12 = 1.0

shader13 = ../../shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass3.slang
filter_linear13 = false
scale_type13 = source
scale13 = 1.0

shader14 = ../../shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass4.slang
filter_linear14 = false
scale_type14 = source
scale14 = 3

// GTU TV Processing
shader15 = ../../shaders/HyperspaceMadness/hsm-gtu/hsm-gtu-pass1.slang
scale_type15 = source
scale15 = 1.0
float_framebuffer15 = true

shader16 = ../../shaders/HyperspaceMadness/hsm-gtu/hsm-gtu-pass2.slang
scale_type_x16 = source
scale_x16 = 1.0
scale_type_y16 = source
scale_y16 = 1.0
filter_linear16 = false
float_framebuffer16 = true

// // NTSC passes added here so you can swap out with GTU
// // To use the ntsc-adaptive you will need to comment out the scale-fx passes
// // and uncomment the following

// shader9 = ../../../../stock.slang
