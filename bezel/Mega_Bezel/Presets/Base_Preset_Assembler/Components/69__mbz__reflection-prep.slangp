shaders = 6

shader0 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-prep-post-crt.slang
alias0 = "BR_CRTPass"

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader1 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-linearize-crt.slang
mipmap_input1 = true
filter_linear1 = true
scale_type1 = absolute
// scale_x1 = 480
// scale_y1 = 270
// scale_x1 = 960
// scale_y1 = 540
scale_x1 = 800
scale_y1 = 600
alias1 = "BR_MirrorLowResPass"

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader2 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-horiz.slang
mipmap_input2 = true
filter_linear2 = true

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader3 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-vert.slang
filter_linear3 = true
alias3 = "BR_MirrorBlurredPass"

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader4 = :/shaders/shaders_slang/blurs/blur9x9.slang
mipmap_input4 = true
filter_linear4 = true
scale_type4 = absolute
scale_x4 = 128
scale_y4 = 128
alias4 = "BR_MirrorReflectionDiffusedPass"

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      Blurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader5 = :/shaders/shaders_slang/blurs/blur9x9.slang
mipmap_input5 = true
filter_linear5 = true
scale_type5 = absolute
scale_x5 = 12
scale_y5 = 12
alias5 = "BR_MirrorFullscreenGlowPass"