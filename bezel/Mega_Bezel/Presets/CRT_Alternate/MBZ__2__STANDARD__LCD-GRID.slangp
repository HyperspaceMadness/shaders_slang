// Add Mega Bezel parameters at the beginning of the list for easy access
// A very small pass at 1/8th scale to cache values which are consistent across the frame
// Read back these values later for better performance
shader0 = ../../shaders/HyperspaceMadness/hsm-prep-info-cache-standard.slang
float_framebuffer0 = true
scale_type0 = source
scale0 = 0.125
alias0  = "InfoCachePass"

// Add Intro Animation
shader1 = ../../shaders/HyperspaceMadness/hsm-prep-intro.slang
float_framebuffer1 = true
scale_type1 = source
scale1 = 8

// Color Correction with Dogway's awesome Grade shader
shader2 = ../../shaders/HyperspaceMadness/hsm-dogway/hsm-grade.slang
alias2  = "ColorCorrectPass"

// De-Dithering - Mdapt
shader3 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass0.slang
shader4 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass1.slang
shader5 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass2.slang
shader6 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass3.slang
shader7 = ../../shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass4.slang

// SGENDPT - Hyllian's great de-dither shader
shader8 = ../../shaders/HyperspaceMadness/hsm-sgenpt-mix/hsm-sgenpt-mix.slang

shader9 = ../../shaders/HyperspaceMadness/hsm-ps1dither/hsm-PS1-Undither-BoxBlur.slang
alias9 = refpass

shader10 = ../../shaders/HyperspaceMadness/hsm-lcd-cgwg/hsm-lcd-grid-v2.slang
filter_linear10 = "false"
scale_type10 = "viewport"
scale10 = "1.0"

alias10 = BR_CRTPassAlternate

shader11 = ../../shaders/HyperspaceMadness/hsm-lcd-cgwg/hsm-gba-color.slang
mipmap_input11 = true
filter_linear11 = true
scale_type11 = viewport
scale11 = 1.0
alias11 = BR_CRTPass

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader12 = ../../shaders/HyperspaceMadness/hsm-linearize-crt-alternate.slang
mipmap_input12 = true
filter_linear12 = true
scale_type12 = absolute
float_framebuffer12 = true
// scale_x12 = 480
// scale_y12 = 270
// scale_x12 = 960
// scale_y12 = 540
scale_x12 = 800
scale_y12 = 600
float_framebuffer12 = true
alias12 = BR_MirrorLowResPass

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader13 = ../../shaders/HyperspaceMadness/hsm-blur-outside-screen-horiz.slang
mipmap_input13 = true
filter_linear13 = true
float_framebuffer13 = true
scale_type14 = source

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader14 = ../../shaders/HyperspaceMadness/hsm-blur-outside-screen-vert.slang
filter_linear14 = false
scale_type14 = source
float_framebuffer14 = true
alias14 = BR_MirrorBlurredPass

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader15 = ../../../../blurs/blur9x9.slang
mipmap_input15 = true
filter_linear15 = true
scale_type15 = absolute
float_framebuffer15 = true
scale_x15 = 128
scale_y15 = 128
alias15 = BR_MirrorReflectionDiffusedPass

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      Blurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader16 = ../../../../blurs/blur9x9.slang
mipmap_input16 = true
filter_linear16 = true
scale_type16 = absolute
float_framebuffer16 = true
scale_x16 = 12
scale_y16 = 12
alias16 = BR_MirrorFullscreenGlowPass

// Bezel Reflection ----------------------------------------------------------------
shader17 = ../../shaders/HyperspaceMadness/hsm-bezel-reflection-standard.slang
mipmap_input17 = true
filter_linear17 = true
scale_type17 = viewport
float_framebuffer17 = true
alias17 = BR_CRTAndReflectionPass

// Define how many shaders will be used from this list
shaders = 18


// Define textures to be used by the different passes
textures = "SamplerLUT1;SamplerLUT2;SamplerLUT3;IntroImage;ScreenPlacementImage;ColoredGelImage;TubeStaticReflectionImage;BackgroundImage;ReflectionMaskImage;FrameTextureImage;CabinetGlassImage;BezelImage;BezelVertImage;DecalImage;NightLightingImage;LEDImage;TopLayerImage;"

SamplerLUT1 = ../../shaders/HyperspaceMadness/textures/lut/16.png
SamplerLUT1_linear = true
SamplerLUT2 = ../../shaders/HyperspaceMadness/textures/lut/64.png
SamplerLUT2_linear = true
