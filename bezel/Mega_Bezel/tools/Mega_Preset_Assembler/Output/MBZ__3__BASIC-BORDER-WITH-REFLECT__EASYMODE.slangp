scale_type13 = viewport
float_framebuffer13 = true

shader14 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-guest/advanced/hsm-deconvergence.slang
filter_linear14 = true
scale_type14 = viewport
scale_x14 = 1.0
scale_y14 = 1.0

shader15 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-prep-post-crt.slang
alias15 = "MBZ_PostCRTPass"

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader16 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-linearize-crt.slang
mipmap_input16 = true
filter_linear16 = true
scale_type16 = absolute
// scale_x16 = 480
// scale_y16 = 270
// scale_x16 = 960
// scale_y16 = 540
scale_x16 = 800
scale_y16 = 600
alias16 = "BR_MirrorLowResPass"

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader17 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-horiz.slang
mipmap_input17 = true
filter_linear17 = true

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader18 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-vert.slang
filter_linear18 = true
alias18 = "BR_MirrorBlurredPass"

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader19 = :/shaders/shaders_slang/blurs/blur9x9.slang
mipmap_input19 = true
filter_linear19 = true
scale_type19 = absolute
scale_x19 = 128
scale_y19 = 128
alias19 = "BR_MirrorReflectionDiffusedPass"

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      Blurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader20 = :/shaders/shaders_slang/blurs/blur9x9.slang
mipmap_input20 = true
filter_linear20 = true
scale_type20 = absolute
scale_x20 = 12
scale_y20 = 12
alias20 = "BR_MirrorFullscreenGlowPass"

// Bezel Reflection ----------------------------------------------------------------
shader21 = :/shaders/shaders_slang/bezel/Mega_Bezel/shaders/HyperspaceMadness/hsm-bezel-reflection-basic-border-with-reflect.slang
scale_type21 = viewport
float_framebuffer21 = true
alias21 = "BR_CRTAndReflectionPass"
