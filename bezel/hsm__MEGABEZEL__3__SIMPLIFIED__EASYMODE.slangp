// Add Mega Bezel Params & Initial Prep
//      Add Mega Bezel parameters at the beginning of the list for easy access
//      Add Color Correction
//      Calculate Average Luminance and put in alpha channel
//      Debug Drawing of the resolution & screen scaling info
shader0 = ../bezel/shaders/HyperspaceMadness/hsm-prep-initial.slang
float_framebuffer0 = true
alias0  = AvgLumPass

shader1 = ../bezel/shaders/HyperspaceMadness/hsm-linearize.slang
filter_linear1 = false
srgb_framebuffer1 = true
alias1 = ORIG_LINEARIZED

shader2 = ../bezel/shaders/HyperspaceMadness/hsm-easymode/hsm-crt-easymode-blur_horiz.slang
filter_linear2 = false
srgb_framebuffer2 = true

shader3 = ../bezel/shaders/HyperspaceMadness/hsm-easymode/hsm-crt-easymode-blur_vert.slang
filter_linear3 = false
srgb_framebuffer3 = true

shader4 = ../bezel/shaders/HyperspaceMadness/hsm-easymode/hsm-crt-easymode-threshold.slang
filter_linear4 = false
srgb_framebuffer4 = true

// Easymode's Shader!
shader5 = ../bezel/shaders/HyperspaceMadness/hsm-easymode/hsm-crt-easymode-halation-with-scaling.slang
filter_linear5 = true
scale_type5 = viewport
float_framebuffer5 = true
alias5 = BR_CRTPass

// Tube Scale Curvature Mapping
// Write mapping into the pass, of the 4 channels, x & y are tube warped coord and z & w are outside tube mask and edge mask
shader6 = ../bezel/shaders/HyperspaceMadness/hsm-curvature-mapping.slang
mipmap_input6 = true
filter_linear6 = true
scale_type6 = viewport
float_framebuffer6 = true
alias6 = BR_MappingPass

// Reduce Resolution  ----------------------------------------------------------------
//      Reduce the resolution to a small static size regardless of final resolution
//      Allows consistent look and faster at different final resolutions for blur
//      Mipmap option allows downscaling without artifacts
shader7 = ../bezel/shaders/HyperspaceMadness/hsm-linearize-crt.slang
mipmap_input7 = true
filter_linear7 = true
scale_type7 = absolute
float_framebuffer7 = true
// scale_x7 = 480
// scale_y7 = 270
// scale_x7 = 960
// scale_y7 = 540
scale_x7 = 800
scale_y7 = 600
wrap_mode7 = mirrored_repeat
float_framebuffer7 = true
alias7 = BR_MirrorLowResPass

// Add Blur for the Reflection (Horizontal) ----------------------------------------------------------------
shader8 = ../bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-horiz.slang
mipmap_input8 = true
filter_linear8 = true
float_framebuffer8 = true
scale_type9 = source
wrap_mode8 = mirrored_repeat

// Add Blur for the Reflection (Vertical) ----------------------------------------------------------------
shader9 = ../bezel/shaders/HyperspaceMadness/hsm-blur-outside-screen-vert.slang
filter_linear9 = false
scale_type9 = source
float_framebuffer9 = true
wrap_mode9 = mirrored_repeat
alias9 = BR_MirrorBlurredPass

// Reduce resolution ----------------------------------------------------------------
// Reduced to a very small amount so we can create a blur which will create a glow from the screen
//      Mipmap option allows smoother downscaling
shader10 = ../blurs/blur9x9.slang
mipmap_input10 = true
filter_linear10 = true
scale_type10 = absolute
float_framebuffer10 = true
scale_x10 = 128
scale_y10 = 128
wrap_mode10 = mirrored_repeat
alias10 = BR_MirrorReflectionDiffusedPass

// Add Diffused glow all around the screen ----------------------------------------------------------------
//      lurred so much that it's non directional
//      Mipmap option allows downscaling without artifacts
shader11 = ../blurs/blur9x9.slang
mipmap_input11 = true
filter_linear11 = true
scale_type11 = absolute
float_framebuffer11 = true
scale_x11 = 12
scale_y11 = 12
wrap_mode11 = mirrored_repeat
alias11 = BR_MirrorFullscreenGlowPass

// Bezel Generation & Reflection ----------------------------------------------------------------
//      Uses these previous passes:
//          BR_CRTPass
//          BR_MirrorBlurredPass
//          BR_MirrorReflectionDiffusedPass
//          BR_MirrorFullscreenGlowPass
//      Blur passes are in linearized color space, and CRT Pass already has gamma encoded in it
//
//      Uses these textures
            // BackgroundImage
            // BackgroundVertImage
            // TubeGlassImage
            // TopLayerImage
            // TopLayerVertImage

shader12 = ../bezel/shaders/HyperspaceMadness/hsm-mega-bezel-reflection.slang
mipmap_input12 = true
filter_linear12 = true
scale_type12 = viewport
float_framebuffer12 = false

// Define how many shaders will be used from this list
shaders = 13

// Define textures to be used by the different passes
textures = "SamplerLUT3;BackgroundImage;BackgroundVertImage;TubeGlassImage;TopLayerImage;TopLayerVertImage;"

SamplerLUT3 = ../bezel/shaders/HyperspaceMadness/textures/lut/other1.png
SamplerLUT3_linear = true

BackgroundImage = ../bezel/shaders/HyperspaceMadness/textures/BackgroundImage_Carbon_3840x2160.png
BackgroundVertImage = ../bezel/shaders/HyperspaceMadness/textures/BackgroundImage_Carbon_3840x2160.png
TubeGlassImage = ../bezel/shaders/HyperspaceMadness/textures/TubeGlassOverlayImage_3840x2160.png
TopLayerImage = ../bezel/shaders/HyperspaceMadness/textures/TopLayerImage_Night_3840x2160.jpg
TopLayerVertImage = ../bezel/shaders/HyperspaceMadness/textures/TopLayerImage_Night_3840x2160.jpg

