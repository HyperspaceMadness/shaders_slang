// Add Mega Bezel Params & Initial Prep
//      Add Mega Bezel parameters at the beginning of the list for easy access
//      Add Color Correction
//      Calculate Average Luminance and put in alpha channel
//      Debug Drawing of the resolution & screen scaling info
shader0 = ../bezel/shaders/HyperspaceMadness/hsm-prep-initial.slang
float_framebuffer0 = true
alias0  = AvgLumPass

// De-Dithering - Mdapt
shader1 = ../bezel/shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass0.slang
shader2 = ../bezel/shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass1.slang
shader3 = ../bezel/shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass2.slang
shader4 = ../bezel/shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass3.slang
shader5 = ../bezel/shaders/HyperspaceMadness/hsm-mdapt/hsm-mdapt-pass4.slang
alias5 = refpass

shader6 = ../bezel/shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass0.slang
filter_linear6 = false
scale_type6 = source
scale6 = 1.0
float_framebuffer6 = true
alias6 = scalefx_pass0

shader7 = ../bezel/shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass1.slang
filter_linear7 = false
scale_type7 = source
scale7 = 1.0
float_framebuffer7 = true

shader8 = ../bezel/shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass2.slang
filter_linear8 = false
scale_type8 = source
scale8 = 1.0

shader9 = ../bezel/shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass3.slang
filter_linear9 = false
scale_type9 = source
scale9 = 1.0

shader10 = ../bezel/shaders/HyperspaceMadness/hsm-scalefx/hsm-scalefx-pass4.slang
filter_linear10 = false
scale_type10 = source
scale10 = 3

// GTU TV Processing
shader11 = ../bezel/shaders/HyperspaceMadness/hsm-gtu/hsm-gtu-pass1.slang
scale_type11 = source
scale11 = 1.0
float_framebuffer11 = true

shader12 = ../bezel/shaders/HyperspaceMadness/hsm-gtu/hsm-gtu-pass2.slang
scale_type_x12 = source
scale_x12 = 1.0
scale_type_y12 = source
scale_y12 = 1.0
filter_linear12 = false
float_framebuffer12 = true

